# Backend Environment Variables Template
# Copy this file to .env and fill in the values

# Flask Settings
SECRET_KEY=dev-secret-key-change-this-in-production
FLASK_DEBUG=True
PORT=5000

# Database
# Use sqlite for local development: sqlite:///phishing_detector.db
DATABASE_URL=sqlite:///phishing_detector.db

# JWT Authentication
JWT_SECRET_KEY=jwt-secret-key-change-this-in-production

# Firebase Admin SDK
# Path to your service account key file relative to backend/ directory or absolute path
GOOGLE_APPLICATION_CREDENTIALS=serviceAccountKey.json
